<body>
	<h1>
		<%= title %>
	</h1>

	<h2 id="demo1">订单列表</h2>
	<br />
	<h2 id="demo2">订单新增</h2>
	<br />
	<h2 id="demo3">订单修改</h2>
	<h2 id="demo4">订单删除</h2>
	<br />


	<script>
		$('#demo1').bind('click', function () {

			var apiData = {
				token: token,
				page: 1,
				pageSize: 10
			}

			$.ajax({
				type: "post",
				url: baseUrl + "order/list",
				contentType: 'application/x-www-form-urlencoded',
				data: apiData,
				success: function (res) {
					console.log(res);
				},
				error: function () {
				}
			});
		})
		$('#demo2').bind('click', function () {
			var arr = [
					  {
							goods_id : 1,
							num: 4,
							actual_price: 100
						},
					  {
							goods_id : 2,
							num: 4,
							actual_price: 100
						}						
				]
			var shoesArr = JSON.stringify(arr)

			var apiData = {
				token: token,
				
				customer_name: '不留名客户',
				customer_id: 1,
				phone: '',
				address: '',
				shop_id: '1',

				sale_type: 1,
				express_fee: 10,
				order_fee: 800,
				order_discount_fee: 0,
				shoesArr: shoesArr
			}

			$.ajax({
				type: "post",
				url: baseUrl + "order/add",
				contentType: 'application/x-www-form-urlencoded',
				data: apiData,
				success: function (res) {
					console.log(res);
				},
				error: function () {
				}
			});
		})

		$('#demo3').bind('click', function () {

			var apiData = {
				token: token,
				id: 6
			}

			$.ajax({
				type: "post",
				url: baseUrl + "order/update",
				contentType: 'application/x-www-form-urlencoded',
				data: apiData,
				success: function (res) {
					console.log(res);
				},
				error: function () {
				}
			});
		})

		$('#demo4').bind('click', function () {

			var apiData = {
				token: token,
				id: 8
			}

			$.ajax({
				type: "post",
				url: baseUrl + "order/delete",
				contentType: 'application/x-www-form-urlencoded',
				data: apiData,
				success: function (res) {
					console.log(res);
				},
				error: function () {
				}
			});
		})


	</script>
